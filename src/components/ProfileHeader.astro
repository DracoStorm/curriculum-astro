---
interface Props {
    name: string;
    occupation: string;
    photo: string;
}

const { name, occupation, photo } = Astro.props;
---

<header class="container">
    <img src={photo} alt="name" />
    <h1 class="title">{name}</h1>
    <h2 class="title">{occupation}</h2>
</header>

<style>
    img {
        margin: 3rem 0;
        width: 15rem;
        border-radius: 50%;
    }
    h1 {
        font-size: 4rem;
        margin: 0;
        text-align: center;
    }
    h2 {
        font-size: 1rem;
        font-style: oblique;
        text-align: center;
        margin-bottom: 4rem;
    }
</style>
